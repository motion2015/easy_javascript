<!DOCTYPE html>
<html lang="ko">
 <head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>Gallery SHOW</title>
  <style>
    body{
      font-size: 9pt;
    }
    div.image-container{
      position: relative;
      border: 1px solid #000;
      height: 600px;
    }
    div.image-container img{
      position: absolute;
      left:0;
      top:0;
      width: 120px;
    }
  </style>
  <script src="../libs/jquery-1.11.0.min.js"></script>
  <script>
  $(document).ready(function() {
      var $images1 = $('#container1 img');
      var $images2 = $('#container2 img');
      o.showGallery({
          imgsid : "#container1 img",
          count : 6
      });
      o.showGallery({
          imgsid : "#container3 img",
          count : 5
      });
      o.showGallery({
          $images : $images2,
          width : 300,
          height : 300,
          oncomplete : function() {
              console.log("Gallery Completed!!!");
          }
      });
  });

  var o = {
      showGallery : function(userOptions) {
          var dftOptions = {
            imgsid : '',
            $images : null,
            count : 4,
            width : 150,
            height : 150,
            oncomplete : function(){}
          }
        var s = $.extend({}, dftOptions, userOptions || {});

        // if(s.imgsid){
        //     if(s.$images){
        //     //s.$images.siblings(".tmpl").remove();
        //     //    s.$images.parent().append($(s.imgid).addClass("tmpl"));
        //     }else{
        //       s.$images = $(s.imgsid);
        //     }
        // }

        if(s.imgsid){
            if(!s.$images){
                s.$images = $(s.imgsid);
            }
        }

        var length = s.$images.length;
        console.log("Length =  " + length);
        for(var i=0;i<length;i++){
          //console.log($images.eq(i).attr('src'));
          var $img = s.$images.eq(i);

          var x = 100 + ((i%s.count)*s.width);
          var y = 100 + (parseInt(i/s.count)*s.height);

          console.log(x,y);

          $img.animate({
            left : x,
            top : y
          });
        }
        s.oncomplete();
    }
  }

  </script>
 </head>
